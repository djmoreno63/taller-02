<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <Button
        android:id="@+id/button_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="156dp"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.297"
        app:layout_constraintStart_toStartOf="parent" />

    <SearchView
        android:layout_width="47dp"
        android:layout_height="40dp"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="98dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Que deseas saber¿?"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="107dp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="El reciclaje"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="173dp" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Principales noticias"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="343dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="171dp"
        android:layout_height="104dp"
        android:text="El reciclaje es un proceso cuyo objetivo es convertir desechos en nuevos productos o en materia prima para su posterior utilización."
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="233dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="167dp"
        android:layout_height="100dp"
        android:text="Noticias sobre Reciclaje: artículos, videos, fotos y el más completo archivo de noticias de Colombia y el mundo sobre Reciclaje."
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="420dp" />
</androidx.constraintlayout.widget.ConstraintLayout>